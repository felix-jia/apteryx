<?xml version="1.0" encoding="UTF-8"?>
<MODULE xmlns="https://github.com/alliedtelesis/apteryx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://github.com/alliedtelesis/apteryx
	https://github.com/alliedtelesis/apteryx/releases/download/v3.18/apteryx.xsd">
	<SCRIPT>
		system = require('system')
		system:set_bootloader_version()
		system:set_current_software()
		system:set_software_version()
		system:set_build_date()
	</SCRIPT>
	<NODE name="system">
		<NODE name="interface" help="interface name">
			<NODE name="*" help="Flash filesystem information">
				<NODE name="default_ttl" mode="r" help="Total flash filesystem storage space">
					<PROVIDE> return system:flash_file_system().total_size</PROVIDE>
				</NODE>
				<NODE name="link_mtu" mode="r" help="Total flash filesystem storage space">
					<PROVIDE> return system:flash_file_system().total_size</PROVIDE>
				</NODE>
				<NODE name="prefixes" help="IPv6 Prefix (network address)">
					<NODE name="*" help="Prefix">
						<NODE name="prefix" mode="rw" help="Prefix (network address) to advertise" pattern="^{{ipv6-address}}/{{range(0,128)}}$" />
						<NODE name="owner" mode="rw" help="Who configured this prefix ?" pattern="^user$" />
					</NODE>
				</NODE>
			</NODE>
		</NODE>
	</NODE>
</MODULE>
